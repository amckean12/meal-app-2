<div class="welcome-page-aka-login">
  <div class="form">
    <form class="login-form">
      <h1>Menu Login</h1>
      <%= form_for @user, :url => url_for(:controller => 'sessions', :action => 'create') do |f| %>
          <%= f.label :email%><br>
          <%= f.text_field :email %>
          <br></br>
          <%= f.label :password%><br>
          <%= f.password_field :password%>
          <br></br>
          <%= f.submit "Login", :class => "login-button"%>
      <% end %>
      <p class="message">Not registered? <%= link_to "Sign Up!", new_user_path %></p>
    </form>
  </div>
</div>
